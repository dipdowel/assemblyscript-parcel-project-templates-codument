{
    "compilerOptions": {
        //    "lib": ["DOM", "DOM.Iterable", "es6"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "incremental": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "isolatedModules": true,
        "types": [/*"jest",*/ "node"],
        "composite": false,

        "target": "esnext",
        "module": "commonjs",
        "declaration": false,
        "outDir": "build",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "types": ["node"]
}
